{
  "name": "peggy-language",
  "displayName": "Peggy Language",
  "description": "Syntax highlighting and error reporting for Peggy",
  "version": "2.1.3",
  "license": "MIT",
  "publisher": "PeggyJS",
  "author": {
    "name": "Tobias Kahlert",
    "email": "code.databyte@gmail.com"
  },
  "homepage": "https://github.com/peggyjs/code-peggy-language",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/peggyjs/code-peggy-language/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peggyjs/code-peggy-language"
  },
  "activationEvents": [
    "onLanguage:peggy"
  ],
  "main": "./out/client/client",
  "contributes": {
    "languages": [
      {
        "id": "peggy",
        "aliases": [
          "Peggy",
          "peggy",
          "PEG.js",
          "pegjs",
          "peg.js"
        ],
        "extensions": [
          ".peggy",
          ".pegjs"
        ],
        "configuration": "./peggy.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "peggy",
        "scopeName": "source.peggy",
        "path": "./syntaxes/peggy.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "peggy",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint . --ext ts --ext js",
    "clean": "rimraf ./out",
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production",
    "webpack:dev": "npm run clean && webpack --mode none",
    "precompile": "npm run lint",
    "compile": "npm run webpack",
    "watch:webpack": "webpack watch --mode development",
    "watch:tsc": "tsc -b -w"
  },
  "devDependencies": {
    "@peggyjs/eslint-config": "0.0.1",
    "@types/node": "15.12.0",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "peggy": "^1.2.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  }
}
