{
    "name": "peggy-language",
    "displayName": "Peggy Language",
    "description": "Syntax highlighting and error reporting for Peggy",
    "version": "1.0.3",
    "license": "MIT",
    "publisher": "PeggyJS",
    "author": {
        "name": "Tobias Kahlert",
        "email": "code.databyte@gmail.com"
    },
    "homepage": "https://github.com/peggyjs/code-peggy-language",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "icon": "images/icon.png",
    "bugs": {
        "url": "https://github.com/peggyjs/code-peggy-language/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/peggyjs/code-peggy-language"
    },
    "activationEvents": [
        "onLanguage:peggy"
    ],
    "main": "./out/main",
    "contributes": {
        "languages": [
            {
                "id": "peggy",
                "aliases": [
                    "Peggy",
                    "peggy",
                    "PEG.js",
                    "pegjs",
                    "peg.js"
                ],
                "extensions": [
                    ".peggy",
                    ".pegjs"
                ],
                "configuration": "./peggy.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "peggy",
                "scopeName": "source.peggy",
                "path": "./syntaxes/peggy.json",
                "embeddedLanguages": {
                    "meta.embedded.block.javascript": "javascript"
                }
            }
        ],
        "snippets": [
            {
                "language": "peggy",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "rm -r ./node_modules ./out ./server/out ./server/tsconfig.tsbuildinfo  && npm install && npm run compile && npm prune --production",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/node": "14.14.41",
        "@types/vscode": "^1.55.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "peggy": "^1.1.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1"
    }
}
